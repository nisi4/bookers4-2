<div class="container">
  <div class="row">
    <div class="col-11 mx-auto">
      <div class="row">
        <div class="col-4">
          <%= render "users/common", user: @user, book: @book %>
        </div>
        <div class="col-8">
          <div class="users">
            <h2 class="mt-4">Books</h2>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th colspan="2">Opinion</th>
                </tr>
              </thead>
              <% @books.each do |book| %>
              <tbody>
                <tr>
                  <td><%= image_tag book.user.get_image(80,80) %></td>
                  <td>
                    <%= link_to book_show_path(book.id) do %>
                      <%= book.title %>
                    <% end %>
                  </td>
                  <td colspan="2"><%= book.body %></td>
                </tr>
              </tbody>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>