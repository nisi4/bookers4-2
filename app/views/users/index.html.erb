<div class="container">
  <div class="row">
    <div class="col-11 mx-auto">
      <div class="row">
        <div class="col-4">
          <%= render "common", user: @user, book: @book %>
        </div>
        <div class="col-8">
          <div class="users">
            <h2 class="mt-4">Users</h2>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>images</th>
                  <th>name</th>
                  <th></th>
                </tr>
              </thead>
              <% @users.each do |user| %>
              <tbody>
                <tr>
                  <td><%= image_tag user.get_image(80,80) %></td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= link_to user_show_path(user.id) do %>
                      <p>Show</p>
                    <% end %>
                  </td>
                </tr>
              </tbody>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>